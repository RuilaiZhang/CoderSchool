<h1>Languages</h1>

<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <% if language.user_id == current_user.id %> 
        <tr>
          <td><%= language.course_name %></td>
          <td><%= language.user_id %></td>
          <td><%= link_to 'Show', language %></td>
          <td><%= link_to 'Edit', edit_language_path(language) %></td>
          <td><%= link_to 'Destroy', language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Language', new_language_path %>
